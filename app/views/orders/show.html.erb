<h1>Order #<%= @order.id %></h1>
<p><strong>Date:</strong> <%= @order.created_at.strftime("%Y-%m-%d") %></p>
<p><strong>Status:</strong> <%= @order.status.capitalize %></p>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.price %></td>
        <td>$<%= item.quantity * item.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Total: $<%= @order.total_price %></h3>
<%= link_to "Back to Orders", orders_path, class: "btn btn-secondary" %>
