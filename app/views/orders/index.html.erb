<h1>Your Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order #</th>
      <th>Date</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>#<%= order.id %></td>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td>$<%= order.total_price %></td>
        <td><%= order.status.capitalize %></td>
        <td><%= link_to "View", order_path(order), class: "btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
