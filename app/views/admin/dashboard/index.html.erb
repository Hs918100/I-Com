 <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-user"></i> Admin Profile
            </button>
          </div>
        </div>

        <div class="row">
          <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <a href="<%= admin_users_path %>" class="text-decoration-none">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text"><%= @users.size %></p>
                    </div>
                </div>
            </a>
          </div>
          <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
          <a href="<%= admin_products_path %>" class="text-decoration-none">
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text"><%= @products.size %></p>
              </div>
            </div>
          </a>
          </div>
          <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-success">
              <div class="card-body">
                <h5 class="card-title">Total Sales</h5>
                <p class="card-text">0</p>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-warning">
              <div class="card-body">
                <h5 class="card-title">Pending Orders</h5>
                <p class="card-text">0</p>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-danger">
              <div class="card-body">
                <h5 class="card-title">Issues Reported</h5>
                <p class="card-text">5</p>
              </div>
            </div>
          </div>
        </div>