<h1 class="text-center mb-4">User List</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td> <!-- Assuming you have a 'role' attribute -->
        <td>
          <% if !user.admin? %>  <!-- Only show edit/delete for non-admin users -->
            <%= link_to 'Show', admin_user_path(user), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-primary btn-sm' %>
            <%= button_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger btn-sm', style: 'border: none;' %>
          <% else %>
            <span class="text-muted">Actions disabled for Admin</span> <!-- Optionally show message for Admins -->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
