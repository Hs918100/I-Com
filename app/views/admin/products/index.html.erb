<h1 class="mb-4">Products</h1>

<%= link_to "New Product", new_admin_product_path, class: "btn btn-success mb-3" %>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td>$<%= product.price %></td>
          <td><%= product.stock %></td>
          <td>
            <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-primary btn-sm mr-2" %>
            <%= button_to "Delete", admin_product_path(product), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
