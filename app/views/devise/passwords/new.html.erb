<div class="container d-flex justify-content-center mt-5">
  <div class="card p-4 shadow-sm" style="width: 400px;">
    <h2 class="text-center">Forgot Password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100" %>
    <% end %>
    <div class="mt-3 text-center">
      <%= link_to "Log in", new_user_session_path, class: "text-decoration-none" %> |
      <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
